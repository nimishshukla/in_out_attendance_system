<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Estimated time</th>
    <th>Actual time</th>
    <th>Time taken</th>
    <th>Status</th>
    <th>Priority</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.title %></td>
    <td><%=h task.description %></td>
    <td><%=h task.estimated_time %></td>
    <td><%=h task.actual_time %></td>
    <td><%=h task.time_taken %></td>
    <td><%=h task.status_id %></td>
    <td><%=h task.priority %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>